    <meta name="description" content="HE Classic to HEBorn migration app.">
    <meta name="author" content="Neoart Labs">

    <title>Migrate to HEBorn</title>
    
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
